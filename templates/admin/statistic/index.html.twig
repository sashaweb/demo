{% extends 'admin/base.html.twig' %}
{% set page_title = t('page.admin.statistic.title')|trans %}

{% block title %}{% trans %}page.terms.title{% endtrans %}{% endblock %}
{% block h1 %}{% trans %}page.terms.title{% endtrans %}{% endblock %}
{% block meta_description %}{% trans %}page.terms.meta.description{% endtrans %}{% endblock %}
{% block meta_keywords %}{% trans %}page.terms.meta.keywords{% endtrans %}{% endblock %}

{% block body %}

<div class="row border-bottom mt-5 mb-5 row-cols-1 row-cols-lg-2 row-cols-xl-2">
    <div class="col-12 col-lg-6 col-xl-6">
        <h1>{% trans %}page.admin.statistic.title{% endtrans %}</h1>
    </div>
    <div class="col-12 col-lg-6 col-xl-6 text-end">
        <a href="{{path('app_admin_categories_create')}}" class="btn btn-success">{% trans from 'messages' %}btn.create{% endtrans %}</a>    
    </div>
</div>


<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Period</th>
                <th scope="col">Count</th>
            </tr>
        </thead>
        <tbody>
            {% for item in statistic %}
                <tr>
                    <td>
                        {{ item.month }}.{{ item.year }}
                    </td>
                    <td>
                        {{ item.count }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% for item in statistic %}

{% endfor %}

{% endblock %}
